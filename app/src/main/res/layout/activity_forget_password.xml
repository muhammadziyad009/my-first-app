<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgetPassword"
    android:paddingHorizontal="14.5dp"
    >


    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/security_image"

        />
    <TextView
        android:id="@+id/tv_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select which contact details should we use to
reset your password"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_below="@id/image_view"/>
    <EditText
        android:id="@+id/et_via_sms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Via sms"
        android:layout_below="@id/tv_info"
        android:padding="20sp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/et_custom_edittext"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/bottom_icon_message"
        />
    <EditText
        android:id="@+id/et_via_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Via email"
        android:layout_below="@id/et_via_sms"
        android:padding="20sp"
        android:layout_marginVertical="10dp"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/email_icon"
        android:background="@drawable/et_custom_edittext"
        />
<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Continue"
    android:padding="20sp"
    android:backgroundTint="@color/black"
    android:layout_below="@id/et_via_email"
    android:layout_marginStart="10sp"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="10sp"/>


</RelativeLayout>